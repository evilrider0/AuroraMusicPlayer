<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView_cover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/cover" />

    <TextView
        android:id="@+id/textView_songname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_cover"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imageView_cover"
        android:text="Song Name"
        android:textFontWeight="700"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textView_artist"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_cover"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imageView_cover"
        android:text="Artist Name"
        android:textSize="14sp"
        android:textFontWeight="300"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/textView_duration"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_cover"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView_songname"
        android:text="00:00"
        android:textSize="14sp"
        android:textFontWeight="300"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        />


</RelativeLayout>